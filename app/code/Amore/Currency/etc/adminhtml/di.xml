            <argument name="modifiers" xsi:type="array">
                <item name="amore_price_field" xsi:type="array">
                    <item name="class" xsi:type="string">Amore\Currency\Ui\DataProvider\Product\Form\Modifier\Price</item>
                    <item name="sortOrder" xsi:type="number">160</item>
