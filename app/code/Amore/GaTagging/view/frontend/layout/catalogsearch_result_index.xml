<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Amore\GaTagging\Block\GaTagging"
                   name="ap_search_result"
                   ifconfig="amore_gatagging/tagmanager/active"
                   after="-"
                   template="Amore_GaTagging::ap-search-result.phtml" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Amore\GaTagging\Block\GaTagging"
                   name="search_result_datalayer_push"
                   ifconfig="amore_gatagging/tagmanager/active"
                   after="-"
                   template="Amore_GaTagging::search-result.phtml" />
        </referenceContainer>
    </body>
</page>
