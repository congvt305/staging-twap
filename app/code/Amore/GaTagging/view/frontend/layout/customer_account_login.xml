<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- PAGE SPECIFIC AP -->
        <referenceContainer name="after.body.start">
            <block class="Amore\GaTagging\Block\GaTagging"
                   name="ap_login_page"
                   ifconfig="amore_gatagging/tagmanager/active"
                   cacheable="false"
                   after="amore_gatagging_common_ap"
                   template="Amore_GaTagging::common/ap-pagetype.phtml">
                <arguments>
                    <argument name="page_type" xsi:type="string">MY_LOGIN</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block class="Amore\GaTagging\Block\GaTagging"
                   name="ap_customer_login"
                   ifconfig="amore_gatagging/tagmanager/active"
                   after="amore_tagging_common_pageready"
                   template="Amore_GaTagging::customer/ap-customer-login.phtml" >
                <arguments>
                    <argument name="event_name" xsi:type="string">login_complete</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
