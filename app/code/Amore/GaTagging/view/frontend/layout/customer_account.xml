<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" label="Customer My Account (All Pages)" design_abstraction="custom">
    <body>
        <referenceContainer name="after.body.start">
            <block class="Amore\GaTagging\Block\GaTagging"
                   name="ap_customer_register"
                   ifconfig="amore_gatagging/tagmanager/active"
                   after="-"
                   template="Amore_GaTagging::ap-customer-register.phtml" />
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="customer_register_datalayer_push"
                   ifconfig="amore_gatagging/tagmanager/active"
                   after="-"
                   template="Amore_GaTagging::datalayer-push-register.phtml" >
                <arguments>
                    <argument name="event_name" xsi:type="string">join</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
