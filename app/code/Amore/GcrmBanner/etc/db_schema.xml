<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magento_banner" resource="default" comment="Enterprise Banner">
        <column xsi:type="smallint" name="is_remote" nullable="false" padding="5" unsigned="true" default="0"
                comment="Is Remote"/>
        <column xsi:type="varchar" name="remote_code" nullable="true" length="255" comment="Remote Code"/>
    </table>
    <table name="salesrule_coupon" resource="default" engine="innodb" comment="Salesrule Coupon">
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="true" identity="false"
                comment="Customer ID (Generated By GCRM)"/>
        <index referenceId="SALESRULE_COUPON_CUSTOMER_ID" indexType="btree">
            <column name="customer_id"/>
        </index>
    </table>
</schema>
