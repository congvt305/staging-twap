<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="customer">
        <field name="ba_code" formElement="input" sortOrder="200">
            <settings>
                <additionalClasses>
                    <class name="admin-ba-code">true</class>
                </additionalClasses>
            </settings>
        </field>
        <field name="verify_button" formElement="input" component="Amore_CustomerRegistration/js/verify-ba-code" sortOrder="201">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">data</item>
                    <item name="elementTmpl" xsi:type="string">Amore_CustomerRegistration/verifyButton</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-medium">true</class>
                </additionalClasses>
            </settings>
        </field>
    </fieldset>
</form>
