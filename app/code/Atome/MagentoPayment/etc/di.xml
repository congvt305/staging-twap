<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Atome\MagentoPayment\Model\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Atome\MagentoPayment\Model\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">atome</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="debug" xsi:type="object">Atome\MagentoPayment\Model\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Quote\Model\ResourceModel\Quote">
        <plugin name="atomeQuoteAroundSave" type="Atome\MagentoPayment\Model\Quote\Save\Plugin" />
    </type>
</config>