<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <social_share>
            <general>
                <enabled>1</enabled>
            </general>
            <twitter_share>
                <twitter_share_enabled>1</twitter_share_enabled>
                <twitter_share_url>http://twitter.com/intent/tweet?url=</twitter_share_url>
            </twitter_share>
            <facebook_share>
                <facebook_share_enabled>1</facebook_share_enabled>
                <facebook_share_url>http://www.facebook.com/sharer/sharer.php?u=</facebook_share_url>
            </facebook_share>
            <pinterest_share>
                <pinterest_share_enable>1</pinterest_share_enable>
                <pinterest_share_url>http://www.pinterest.com/pin/create/button/?url=</pinterest_share_url>
            </pinterest_share>
            <google_share>
                <google_share_enable>1</google_share_enable>
                <google_share_url>https://plus.google.com/share?url=</google_share_url>
            </google_share>
        </social_share>
    </default>
</config>
