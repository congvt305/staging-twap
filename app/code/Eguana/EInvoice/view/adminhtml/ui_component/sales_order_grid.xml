<?xml version="1.0"?>

<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="toggleeinvoiceissue">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">toggleeinvoiceissue</item>
                        <item name="label" xsi:type="string" translate="true">Toggle Einvoice Status</item>
                        <item name="url" xsi:type="url" path="eguana_einvoice/einvoice/togglestatus"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Toggle Einvoice Status</item>
                            <item name="message" xsi:type="string" translate="true">Would you like to toggle status of Einvoice Issue of those Orders?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
