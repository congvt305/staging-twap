<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="videoboard" translate="label" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Video Board</label>
            <tab>eguana_extensions_tab</tab>
            <resource>Eguana_VideoBoard::videoboard_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="page_top_banner_id" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Video Board top banner Id</label>
                </field>
                <field id="sort_direction" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Video sort type</label>
                    <source_model>Eguana\VideoBoard\Model\Config\Source\Dropdown</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
