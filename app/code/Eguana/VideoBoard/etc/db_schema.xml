<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="eguana_video_board" resource="default" engine="innodb" comment="Create Eguana Video Board Table">
        <column xsi:type="int" name="entity_id" padding="10" identity="true" unsigned="true" nullable="false" comment="ID"/>
        <column xsi:type="varchar" name="video_title" nullable="false" length="255" comment="Video Title"/>
        <column xsi:type="varchar" name="video_url" nullable="false" length="255" comment="Video URL"/>
        <column xsi:type="text" disabled="true" name="content" nullable="true" comment="Content"/>
        <column xsi:type="text" name="description" nullable="true" comment="Description"/>
        <column xsi:type="text" name="thumbnail_image" nullable="true" comment="Thumbnail Image"/>
        <column xsi:type="varchar" name="store_id" nullable="false" comment="Store ID"/>
        <column xsi:type="smallint" name="is_active" padding="5" unsigned="true" nullable="false" identity="false"
                default="1" comment="Visibility status 1 for Enable and 0 for Disable"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" comment="Created at" default="CURRENT_TIMESTAMP"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" comment="Updated at" default="CURRENT_TIMESTAMP"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="EGUANA_VIDEO_BOARD_VIDEO_TITLE_DESCRIPTION" indexType="fulltext">
            <column name="video_title"/>
            <column name="description"/>
        </index>
    </table>
</schema>
