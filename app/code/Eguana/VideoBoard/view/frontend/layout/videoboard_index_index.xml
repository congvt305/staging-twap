<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>How To</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">How To</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Eguana\VideoBoard\Block\ListBlock" name="videoboard.list.top.banner" template="Eguana_VideoBoard::top-banner.phtml" before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">Eguana\VideoBoard\ViewModel\VideoBoard</argument>
                </arguments>
            </block>
            <block class="Eguana\VideoBoard\Block\ListBlock" name="VideoBoard.list" template="Eguana_VideoBoard::list.phtml" />
        </referenceContainer>
    </body>
</page>
