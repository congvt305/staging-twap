<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Find a Store near you</title>
        <script src="Eguana_StoreLocator/js/google/map/storesmapviewer.js"/>
    </head>
    <body>
        <attribute name="class" value="store-locator"/>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Find a Store near you</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Find a Store near you</item>
                    <item name="label" xsi:type="string" translate="true">Find a Store near you</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Eguana\StoreLocator\Block\InfoList" name="stores_info_list" template="Eguana_StoreLocator::info/list.phtml"/>
        </referenceContainer>
    </body>
</page>
