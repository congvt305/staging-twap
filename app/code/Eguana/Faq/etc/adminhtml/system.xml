                </field>
                <field id="category_5" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Category 5</label>
                </field>
                <field id="category_6" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Category 6</label>
                </field>
            </group>
        </section>
    </system>
</config>
