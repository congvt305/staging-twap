<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Customer::customer">
                    <resource id="Eguana_CustomerBulletin::ticket_admin" title="Manage Ticket" sortOrder="0">
                        <resource id="Eguana_CustomerBulletin::ticket_manage" title="Ticket Support" translate="title" sortOrder="200" />
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Eguana_CustomerBulletin::ticket_manage_config" title="Ticket Support Config" translate="title" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
