<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
  <table name="amasty_birth_log" resource="default" engine="innodb" comment="Amasty Special Occasion Coupons">
    <column xsi:type="int" name="log_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Id"/>
    <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" identity="false" comment="Customer Id"/>
    <column xsi:type="datetime" name="sent_date" on_update="false" nullable="false" comment="Sent Date"/>
    <column xsi:type="int" name="y" padding="10" unsigned="true" nullable="false" identity="false" comment="year"/>
    <column xsi:type="text" name="type" nullable="false" comment="type"/>
    <constraint xsi:type="primary" referenceId="PRIMARY">
      <column name="log_id"/>
    </constraint>
    <index referenceId="AMASTY_BIRTH_CUSTOMER_ID_CUSTOMER_ID" indexType="btree">
      <column name="customer_id"/>
    </index>
  </table>
</schema>
