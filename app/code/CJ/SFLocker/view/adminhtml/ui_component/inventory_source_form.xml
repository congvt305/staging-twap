<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="store_type" formElement="select" sortOrder="70">
            <settings>
                <label translate="true">Store Type</label>
                <dataScope>extension_attributes.store_type</dataScope>
                <imports>
                    <link name="visible">${ $.provider }:data.general.extension_attributes.is_pickup_location_active</link>
                </imports>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="CJ\SFLocker\Model\Config\Source\StoreType"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="contact_info">
        <field name="phone">
            <settings>
                <imports>
                    <link name="required">0</link>
                </imports>
            </settings>
        </field>
    </fieldset>
    <fieldset name="pickup_location">
        <argument name="data" xsi:type="array">
            <item name="disabled" xsi:type="boolean">true</item>
        </argument>
    </fieldset>
    <fieldset name="contact_info">
        <argument name="data" xsi:type="array">
            <item name="disabled" xsi:type="boolean">true</item>
        </argument>
    </fieldset>
    <fieldset name="address" sortOrder="30">
        <field name="region_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="componentDisabled" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <field name="region" formElement="input" sortOrder="30">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Region</label>
                <visible>true</visible>
            </settings>
        </field>
        <field name="postcode" formElement="input" sortOrder="45">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Area</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
