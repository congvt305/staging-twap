<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Coupon Wallet</argument>
            </action>
        </referenceBlock>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Account</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">My Account</item>
                    <item name="label" xsi:type="string" translate="true">My Account</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account/</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Coupon Wallet</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Coupon Wallet</item>
                    <item name="label" xsi:type="string" translate="true">Coupon Wallet</item>
                </argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="CJ\CouponCustomer\Block\Coupon\Index" name="ticket_list" template="CJ_CouponCustomer::coupon.phtml"  cacheable="false" >
            </block>
        </referenceContainer>
    </body>
</page>
