<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <type name="slide"
          label="Slide"
          component="Magento_PageBuilder/js/content-type"
          preview_component="Magento_PageBuilder/js/content-type/slide/preview">
        <breakpoints>
            <breakpoint name="tablet">
                <form>pagebuilder_slide_tablet_form</form>
            </breakpoint>
        </breakpoints>
        <appearances>
            <appearance name="collage-left"
                        preview_template="Magento_PageBuilder/content-type/slide/collage-left/preview"
                        master_template="Magento_PageBuilder/content-type/slide/collage-left/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="tablet_image_variable" value="tablet_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance name="collage-centered"
                        preview_template="Magento_PageBuilder/content-type/slide/collage-centered/preview"
                        master_template="Magento_PageBuilder/content-type/slide/collage-centered/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="tablet_image_variable" value="tablet_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance name="collage-right">
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="tablet_image_variable" value="tablet_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance name="collage-right"
                        preview_template="Magento_PageBuilder/content-type/slide/collage-right/preview"
                        master_template="Magento_PageBuilder/content-type/slide/collage-right/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="tablet_image_variable" value="tablet_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
            <appearance default="true"
                        name="poster"
                        preview_template="Magento_PageBuilder/content-type/slide/poster/preview"
                        master_template="Magento_PageBuilder/content-type/slide/poster/master"
                        reader="Magento_PageBuilder/js/master-format/read/configurable">
                <converters>
                    <converter name="background_images" component="Magento_PageBuilder/js/mass-converter/background-images">
                        <config>
                            <item name="attribute_name" value="background_images"/>
                            <item name="desktop_image_variable" value="background_image"/>
                            <item name="mobile_image_variable" value="mobile_image"/>
                            <item name="tablet_image_variable" value="tablet_image"/>
                        </config>
                    </converter>
                </converters>
            </appearance>
        </appearances>
    </type>
</config>
