<?php
/** @var \CJ\HoverImage\Block\HoverImage $block */
$product = $block->getData('product');
if(!isset($product)) {
    return;
}
$productHoverImage = $block->getImage($product, 'hover_image');
?>
<?php if ($block->getHoverImage($productHoverImage)):?>
    <span class="product-hover-image">
        <?= $productHoverImage->toHtml() ?>
    </span>
<?php endif;?>

