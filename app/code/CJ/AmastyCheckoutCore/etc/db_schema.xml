    <table name="sales_order">
        <column xsi:type="varchar" name="package_option" nullable="true" length="25"
                comment="Package Option"/>
    </table>
    <table name="sales_order_address">
        <column xsi:type="varchar" name="country_pos_code" nullable="true" length="10"
                comment="Country Pos Code"/>
    </table>
