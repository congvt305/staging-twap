<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <block class="CJ\DataLayer\Block\DataLayer"
                   name="cj_product_detail"
                   after="ap_product_detail"
                   template="CJ_DataLayer::catalog/cj-product-detail.phtml" >
            </block>
        </referenceContainer>
        <referenceContainer name="before.body.end">
            <block name="cj_product_view_detail_datalayer_push"
                   template="CJ_DataLayer::catalog/datalayer-push.phtml">
                <arguments>
                    <argument name="event_name" xsi:type="string">productViewContent</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
