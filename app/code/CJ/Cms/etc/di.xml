<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="MigradtionCmsLog" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="error" xsi:type="object">CJ\Cms\Logger\Handler\ErrorHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="CJ\Cms\Setup\Patch\Data\CreateCms">
        <arguments>
            <argument name="logger" xsi:type="object">MigradtionCmsLog</argument>
        </arguments>
    </type>
    <type name="CJ\Cms\Helper\Request">
        <arguments>
            <argument name="logger" xsi:type="object">MigradtionCmsLog</argument>
        </arguments>
    </type>
    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="cj_migrate_cms_page_data" xsi:type="object">CJ\Cms\Console\MigrateCmsPageData</item>
                <item name="cj_migrate_cms_block_data" xsi:type="object">CJ\Cms\Console\MigrateCmsBlockData</item>
                <item name="cj_migrate_widget_data" xsi:type="object">CJ\Cms\Console\MigrateWidgetsData</item>
            </argument>
        </arguments>
    </type>
</config>
