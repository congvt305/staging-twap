<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.cart.crosssell">
            <arguments>
                <argument name="view_model_get_default_name"
                          xsi:type="object">Eguana\CustomCatalog\ViewModel\GetDefaultCategory</argument>
            </arguments>
        </referenceBlock>
        <referenceContainer name="checkout.cart.form.before">
            <block class="Magento\Framework\View\Element\Template"
                   name="checkout.cart.additional"
                   before="-"
                   template="CJ_Checkout::cart/additional_information.phtml"/>
        </referenceContainer>
    </body>
</page>
