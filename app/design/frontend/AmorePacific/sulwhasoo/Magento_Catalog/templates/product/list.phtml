$isEnabledGAEnhanced = $gaEnhancedData->isEnabledGAEnhanced();

$apRecommendName = "";
$apProductName = "";
$apProductId = "";
$apProductPrice = "";
$apProductBrand = "";
$apProductPosition = "";
?>
<?php if (!$_productCollection->count()): ?>
