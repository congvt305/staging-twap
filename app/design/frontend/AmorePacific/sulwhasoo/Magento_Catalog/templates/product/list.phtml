                                                        ap-prd-name="<?= $apProductName ?>"
                                                        ap-prd-id="<?= $apProductId ?>"
                                                        ap-prd-price="<?= $apProductPrice ?>"
                                                        ap-prd-cate="<?= $rootCategory ?>"
                                                        ap-prd-brand="<?= $apProductBrand ?>"
                                                        ap-prd-position="<?= $apProductPosition ?>"
                                                        ap-prd-list="<?= $categoryName ?>"
                                                    <?php endif; ?>
