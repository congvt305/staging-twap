                                                    <?php if ($_product->getData(CJ\Catalog\Setup\Patch\Data\AddProductDateLaunchAttribute::PROMOTION_TEXT)):?>
	                                                    <button type="button"
	                                                            title="<?= $block->escapeHtmlAttr($_product->getData(CJ\Catalog\Setup\Patch\Data\AddProductDateLaunchAttribute::PROMOTION_TEXT)) ?>"
	                                                            class="action coming-soon">
		                                                    <span><?= $_product->getData(CJ\Catalog\Setup\Patch\Data\AddProductDateLaunchAttribute::PROMOTION_TEXT); ?></span>
	                                                    </button>
                                                    <?php else: ?>
                                                    <button type="submit"
                                                            title="<?= $block->escapeHtmlAttr(__('Add to Cart')) ?>"
                                                            class="action tocart primary">
                                                        <span><?= $block->escapeHtml(__('Add to Cart')) ?></span>
                                                    </button>
	                                                <?php endif; ?>
                                                </form>
                                            <?php endif; ?>
                                        </div>
                                        <?php if(!$_product->getData('offline') && !$_product->getData(CJ\Catalog\Setup\Patch\Data\AddProductDateLaunchAttribute::PROMOTION_TEXT)):?>
