<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="catalog.leftnav" remove="true"/>
        <move element="category.view.container" destination="page.wrapper" before="main.content" />
        <referenceContainer name="content">
            <referenceBlock name="product_list_toolbar">
                <arguments>
                    <argument name="_current_grid_mode" xsi:type="string">list</argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
        <referenceBlock name="category.products.list">
            <block class="Magento\Cms\Block\Block" name="bestseller_top_product_info">
                <arguments>
                    <argument name="block_id" xsi:type="string">bestseller-top-product-info</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
