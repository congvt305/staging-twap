                        <div id="search_history">
                            <div class="search_history_top">
                                <div class="box_title"><?= $block->escapeHtmlAttr(__('Recent Searches')) ?></div>
                                <a href="#" class="delete_all_search"><?= $block->escapeHtmlAttr(__('Delete All')) ?></a>
