<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">My Dashboard</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">My Dashboard</item>
                    <item name="label" xsi:type="string" translate="true">My Dashboard</item>
                    <item name="link" xsi:type="string">{{baseUrl}}customer/account</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string">Edit Account Information</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string">Edit Account Information</item>
                    <item name="label" xsi:type="string" translate="true">Edit Account Information</item>
                </argument>
            </action>
        </referenceBlock>
    </body>
</page>
