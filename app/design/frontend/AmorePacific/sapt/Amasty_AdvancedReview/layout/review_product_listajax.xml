<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="amasty.product.info.product_additional_data">
            <block class="Magento\Review\Block\Form"
                   name="modal.product.review.form"
                   template="Magento_Review::form.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="review-form" xsi:type="array">
                                <item name="component" xsi:type="string">Magento_Review/js/view/review</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
