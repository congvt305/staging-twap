<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="Amasty_Base::vendor/slick/amslick.min.css"/>
    </head>
    <body>
        <move element="catalog.leftnav" destination="sidebar.main" before="-" />
        <move element="category.view.container" destination="page.top" before="breadcrumbs" />
        <referenceBlock name="catalog.compare.sidebar" remove="true"/>
        <!-- <move element="catalog.compare.sidebar" destination="sidebar.main" after="-" /> -->
        <referenceBlock name="page.main.title" remove="true" />
        <move element="category.description" destination="category.products.list" />
        <referenceBlock name="content">
            <container name="product.info.top.wrapper" before="-" htmlTag="div" htmlClass="product-info-top-wrapper">
                <block class="Magento\Catalog\Block\Product\View\Description"
                       name="product.info.visualaids" as="visualaids"
                       template="Magento_Catalog::product/view/visualaids.phtml" after="page.main.title"/>
            </container>
        </referenceBlock>
    </body>
</page>
