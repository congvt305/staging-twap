<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="view.addto.wishlist">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Sapt_AjaxWishlist::catalog/product/view/addto/wishlist.phtml
                </argument>
            </action>
            <arguments>
                <argument
                    name="moduleStatusViewModel"
                    xsi:type="object">Sapt\AjaxWishlist\ViewModel\AjaxWishlistStatus
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="related.product.addto.wishlist">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Sapt_AjaxWishlist::catalog/product/list/addto/wishlist.phtml
                </argument>
            </action>
            <arguments>
                <argument
                    name="moduleStatusViewModel"
                    xsi:type="object">Sapt\AjaxWishlist\ViewModel\AjaxWishlistStatus
                </argument>
            </arguments>
        </referenceBlock>
        <referenceBlock name="upsell.product.addto.wishlist">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Sapt_AjaxWishlist::catalog/product/list/addto/wishlist.phtml
                </argument>
            </action>
            <arguments>
                <argument
                    name="moduleStatusViewModel"
                    xsi:type="object">Sapt\AjaxWishlist\ViewModel\AjaxWishlistStatus
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
