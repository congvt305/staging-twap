<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.top">
            <referenceBlock name="breadcrumbs">
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Home</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">Home</item>
                        <item name="label" xsi:type="string" translate="true">Home</item>
                        <item name="link" xsi:type="string">{{baseUrl}}</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string" translate="true">My Page</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">My Page</item>
                        <item name="label" xsi:type="string" translate="true">My Page</item>
                        <item name="link" xsi:type="string">{{baseUrl}}customer/account/dashboard</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Review</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">Review</item>
                        <item name="label" xsi:type="string" translate="true">Review</item>
                    </argument>
                </action>
            </referenceBlock>
            <block class="Satp\Customer\Block\Membership" name="customer.membership" template="Satp_Customer::membership.phtml" after="breadcrumbs"/>
        </referenceContainer>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Review</argument>
            </action>
        </referenceBlock>
        <move element="page.main.title" destination="content" before="-"/>
    </body>
</page>
