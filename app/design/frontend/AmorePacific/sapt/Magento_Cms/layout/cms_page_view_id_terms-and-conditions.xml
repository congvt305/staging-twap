<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceContainer name="page.wrapper">
        <referenceBlock name="breadcrumbs" remove="true"/>
        <referenceContainer name="page.top">
            <block class="Magento\Theme\Block\Html\Breadcrumbs" name="breadcrumbs.cms">
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string">Home</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string">Home</item>
                        <item name="label" xsi:type="string">Home</item>
                        <item name="link" xsi:type="string">/</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string" translate="true">Legal Information</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Legal Information</item>
                        <item name="label" xsi:type="string" translate="true">Legal Information</item>
                        <item name="link" xsi:type="string">/privacy-policy</item>
                    </argument>
                </action>
                <action method="addCrumb">
                    <argument name="crumbName" xsi:type="string" translate="true">Terms and Conditions</argument>
                    <argument name="crumbInfo" xsi:type="array">
                        <item name="title" xsi:type="string" translate="true">Terms and Conditions</item>
                        <item name="label" xsi:type="string" translate="true">Terms and Conditions</item>
                    </argument>
                </action>
            </block>
        </referenceContainer>
    </referenceContainer>
</page>
