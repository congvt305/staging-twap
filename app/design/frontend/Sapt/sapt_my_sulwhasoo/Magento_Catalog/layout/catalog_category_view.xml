<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="Amasty_Base::vendor/slick/amslick.min.css"/>
    </head>
    <body>
        <move element="catalog.leftnav" destination="sidebar.main" before="-" />
        <move element="category.view.container" destination="page.top" before="breadcrumbs" />
        <referenceContainer name="sidebar.additional" remove="false" />
        <referenceContainer name="sidebar.main">
            <block class="Magento\Catalog\Block\Navigation" name="catalog.leftnav.category" before="-"
                   template="Magento_Catalog::navigation/left.phtml"/>
        </referenceContainer>
    </body>
</page>
